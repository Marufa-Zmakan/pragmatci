<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="nearest_store_delivery_inherit_sale_tree_view" model="ir.ui.view">
        <field name="name">nearest.store.delivery.inherit.sale.tree.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock_qty"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='qty_available_today']" position="replace">
                <field
                    name="qty_available_today"
                    string="Available"
                    attrs="{
                        'column_invisible': [('parent.state', 'not in', ['draft', 'sent'])],
                    }"
                    readonly="1"
                    optional="show"
                />
            </xpath>
        </field>
    </record>
    <record id="nearest_store_delivery_inherit_sale_form_view" model="ir.ui.view">
        <field name="name">nearest.store.delivery.inherit.sale.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form/group/group/div[@name='ordered_qty']" position="after">
                <label for="qty_available_today" string="Available" attrs="{'invisible': [('parent.state', 'not in', ['draft', 'sent'])]}"/>
                <div name="qty_available_today" attrs="{'invisible': [('parent.state', 'not in', ['draft', 'sent'])]}">
                    <field name="qty_available_today" readonly="1"/>
                </div>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button name="mapview_nearest_store"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-globe icon">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Nearest Store</span>
                        <span class="o_stat_text">Map View</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

